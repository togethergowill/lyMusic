.content {
  position: relative;
  width: 100vw;
  margin-left: -40rpx;
  height: 450rpx;
  color: #ffffff;
  margin-bottom: 30rpx;
}

.bg-image {
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.bg-cover {
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgb(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
}
.album {
  display: flex;
  box-sizing: border-box;
  padding: 0 50rpx;
  padding-top: 60rpx;
}

.album .album-picture {
  flex-shrink: 0;
  width: 220rpx;
  border-radius: 16rpx;
}
.album .info {
  position: relative;
  height: 220rpx;
  margin-left: 50rpx;
}
.album .anthor {
  display: flex;
  align-items: center;
}

.anthor .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-right: 20rpx;
}

.anthor .nickname {
  margin-top: 16rpx;
}

.info .desc {
  position: absolute;
  left: 0;
  right: 0;
  margin-top: 30rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.more-info {
  position: absolute;
	display: flex;
	justify-content: space-between;
  align-items: center;
  left: 0;
  right: 0;
  bottom: 0;
  height: 172rpx;
}

.bottom {
	flex: 1;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 28rpx;
}

.bottom .image {
	width: 60rpx;
	margin-right: 20rpx;
}
.bottom .text {
	margin-top: -4rpx;
}