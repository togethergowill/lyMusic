<wxs src="/utils/format.wxs" module="fmt"/>
<view class="mv-album">
	<image src="{{ itemData.cover }}" mode="aspectFill" class="image"/>
	<view class="bottom">
		<view class="player">
			<image src="/assets/images/icons/play_icon.png" mode="widthFix" class="icon"/>
			<view class="count">{{ fmt.formatNum(itemData.playCount) }}</view>
		</view>
		<view class="duration">
			{{ fmt.formatDuration(itemData.mv.videos[0].duration) }}
		</view>
	</view>
</view> 