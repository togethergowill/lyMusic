page {
  color: #ffffff;
}

.bg-image,
.cover {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.cover {
  background: rgba(0, 0, 0, 0.8);
  backdrop-filter: blur(10px);
}

.page-title {
  display: flex;
  color: #aaaaaa;
}

.page-title .item {
  margin: 0 16rpx;
}

.active {
  color: #ffffff;
}

.swiper-content .music {
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  font-size: 28rpx;
}
.music .album {
  flex: 1;
}

.music .album .image {
  height: 630rpx;
  width: 630rpx;
  border-radius: 12rpx;
}

.music .info .name {
  font-size: 40rpx;
  font-weight: 700;

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.info .singer {
  margin-top: 10rpx;
  color: #aaaaaa;
}

.music .lyric {
  text-align: center;
  margin: 16rpx 0;
  width: 100%;
  flex-shrink: 0;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.music .slider {
  margin: 16rpx 8rpx 10rpx 18rpx;
}

.music .time {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}
.music .control {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 12rpx 0;
}

.control .btn {
  width: 60rpx;
  height: 60rpx;
  margin: 12rpx 0;
}

.control .btn.mode {
  width: 74rpx;
  height: 74rpx;
}

.control .btn.play {
  width: 140rpx;
  height: 140rpx;
}

.lyric-page {
  text-align: center;
  color: #aaaaaa;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 40rpx 0;
}

.lyric-page .lyric-list {
  height: 100%;
}

.lyric-list ::-webkit-scrollbar {
  display: none;
}

.lyric-list .lyric-item {
  height: 70rpx;
  line-height: 70rpx;
}

.lyric-list .lyric-item.active {
  color: #6eed84;
  font-size: 34rpx;
  animation: fontSize ease-in-out 0.5s;
}

@keyframes fontSize {
  0% {
    font-size: 20rpx;
  }

  100% {
    font-size: 34rpx;
  }
}
